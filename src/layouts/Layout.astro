---
import "@fontsource-variable/onest";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- !MUST REMOVE CLASS DARK FROM HTML --><!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/briefcase.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:text-white">
    <div class="h-full w-full dark:bg-slate-950">
      <!-- <Navbar /> -->
      <div
        class="z-10 bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  ::selection {
    color: #fff;
    background-color: #494949;
  }
  .dark ::selection {
    background-color: #fff;
    color: #000;
  }
  .dark ::-webkit-scrollbar {
    width: 12px; /* Width of the scrollbar */
  }

  /* Track */
  .dark ::-webkit-scrollbar-track {
    background: #111827; /* Color of the scrollbar track */
  }

  /* Handle */
  .dark ::-webkit-scrollbar-thumb {
    background: #414141; /* Color of the scrollbar handle */
  }

  ::-webkit-scrollbar {
    width: 12px; /* Width of the scrollbar */
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #ffffff; /* Color of the scrollbar track */
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #b3b3b3; /* Color of the scrollbar handle */
  }
</style>
